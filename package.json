{
  "name": "pontoon-addon",
  "version": "0.0.0",
  "private": true,
  "description": "Tools for Pontoon and its integration into the browser.",
  "author": "Michal Stanke <mstanke@mozilla.cz>",
  "license": "MPL-2.0",
  "homepage": "https://github.com/MikkCZ/pontoon-addon#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MikkCZ/pontoon-addon.git"
  },
  "bugs": {
    "url": "https://github.com/MikkCZ/pontoon-addon/issues"
  },
  "scripts": {
    "clean-install": "rm -rf ./node_modules && yarn install --frozen-lockfile && run-s build:clean test:clean",
    "build": "run-s build:clean tsc:check eslint:check stylelint:check webpack:run web-ext:lint web-ext:mozilla web-ext:chrome build:privacy-policy-html",
    "test": "run-s test:clean && jest --ci --config ./jest.config.ts",
    "build:clean": "rimraf ./dist",
    "test:clean": "rimraf ./coverage",
    "tsc:check": "tsc --noEmit --project ./tsconfig.json",
    "eslint:check": "eslint --config ./.eslintrc.js --ext .ts --ext .tsx ./src",
    "eslint:fix": "eslint --config ./.eslintrc.js --ext .ts --ext .tsx --fix ./src",
    "stylelint:check": "stylelint --config ./.stylelintrc.js './src/**/*.tsx'",
    "webpack:run": "webpack --config ./webpack.config.ts",
    "webpack:watch": "cross-env MODE=development webpack --config ./webpack.config.ts --watch",
    "web-ext:lint": "web-ext lint --config ./web-ext.config.js -s ./dist/src",
    "web-ext:mozilla": "node -e \"console.log('Packaging for Mozilla based browsers.')\" && web-ext build --config ./web-ext.config.js -s ./dist/src -a ./dist/web-ext/mozilla",
    "web-ext:chrome": "node -e \"console.log('Packaging for Chromium based browsers.')\" && bash ./scripts/build-chrome.sh",
    "build:privacy-policy-html": "mkdir -p ./dist && marked -i PRIVACY.md -o ./dist/privacy-policy.html",
    "codecov": "codecov",
    "watch": "run-s prebuild webpack:watch"
  },
  "dependencies": {
    "dompurify": "^2.2.8",
    "html-react-parser": "^1.2.4",
    "javascript-time-ago": "^2.3.9",
    "marked": "^4.0.14",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-game-snake": "^1.0.4",
    "react-linkify": "^0.2.2",
    "react-time-ago": "^7.1.3",
    "styled-components": "^5.3.5",
    "urijs": "^1.19.6",
    "uuid": "^8.3.2",
    "webextension-polyfill": "^0.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@stylelint/postcss-css-in-js": "^0.37.2",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@tsconfig/recommended": "^1.0.1",
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/dompurify": "^2.3.1",
    "@types/enzyme": "^3.10.0",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/javascript-time-ago": "^2.0.3",
    "@types/jest": "^27.4.1",
    "@types/marked": "^4.0.3",
    "@types/node": "^14.17.27",
    "@types/react": "^16.14.17",
    "@types/react-dom": "^16.9.14",
    "@types/styled-components": "^5.1.25",
    "@types/urijs": "^1.19.15",
    "@types/uuid": "^8.3.0",
    "@types/webextension-polyfill": "^0.8.0",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "browserslist": "^4.20.2",
    "caniuse-lite": "^1.0.30001332",
    "codecov": "^3.8.3",
    "copy-webpack-plugin": "^9.0.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.4.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-import-resolver-webpack": "^0.13.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^25.2.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^4.12.4",
    "file-loader": "^6.2.0",
    "flush-promises": "^1.0.2",
    "html-webpack-plugin": "5.3.2",
    "jest": "^27.5.1",
