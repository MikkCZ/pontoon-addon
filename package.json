    "stylelint": "^14.7.1",
    "stylelint-config-recommended": "^7.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.3.0",
    "typescript": "^4.2.3",
    "web-ext": "^6.8.0",
    "webpack": "^5.58.2",
    "webpack-cli": "^4.9.0"
  },
  "engines": {
    "node": "^16.0.0",
    "yarn": "^1.22.0"
  },
  "browserslist": [
    "defaults",
    "Firefox >= 91"
  ]
}
