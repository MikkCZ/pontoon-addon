{
  "name": "pontoon-addon",
  "version": "0.0.0",
  "private": true,
  "description": "Tools for Pontoon and its integration into the browser.",
  "author": "Michal Stanke <mstanke@mozilla.cz>",
  "license": "MPL-2.0",
  "homepage": "https://github.com/MikkCZ/pontoon-addon#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MikkCZ/pontoon-addon.git"
  },
  "bugs": {
    "url": "https://github.com/MikkCZ/pontoon-addon/issues"
  },
  "workspaces": [
    "src/packages/*"
  ],
  "devDependencies": {
    "jsdoc": "^3.6.3",
    "lerna": "^3.16.4",
    "npm-run-all": "^4.1.5",
    "web-ext": "^3.2.1",
    "@rescripts/cli": "^0.0.13",
    "@rescripts/rescript-env": "^0.0.11"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --force-local",

    "packages:lint": "lerna exec --parallel -- yarn lint",
    "packages:test": "lerna exec --parallel -- CI=true yarn test",
    "packages:build": "lerna exec --parallel -- INLINE_RUNTIME_CHUNK=false yarn build",

    "pretest": "yarn packages:lint",
    "test": "yarn packages:test",

    "prebuild": "npm-run-all clean test",
    "build:lint": "web-ext lint -s ./src -i 'packages/*/src/' 'packages/*/public/' '**/package.json' '**/node_modules/' 'packages/*/coverage/'",
    "mozilla:build": "web-ext build -s ./src -i 'packages/*/src/' 'packages/*/public/' '**/package.json' '**/node_modules/' 'packages/*/coverage/' -a ./build/web-ext/mozilla",
    "chrome:build": "bash ./scripts/build-chrome.sh",
    "doc": "jsdoc -c ./jsdoc-conf.json",

    "build": "npm-run-all packages:build build:lint mozilla:build chrome:build doc",
    "clean": "rm -rf ./build ./coverage ./**/build ./**/coverage"
  }
}
