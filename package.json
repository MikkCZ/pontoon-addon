{
  "name": "pontoon-tools",
  "version": "0.0.0",
  "private": true,
  "description": "Tools for Pontoon and its integration into the browser.",
  "author": "Michal Stanke <mstanke@mozilla.cz>",
  "license": "MPL-2.0",
  "homepage": "https://github.com/MikkCZ/pontoon-tools#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MikkCZ/pontoon-tools.git"
  },
  "bugs": {
    "url": "https://github.com/MikkCZ/pontoon-tools/issues"
  },
  "workspaces": [
    "src/packages/*"
  ],
  "devDependencies": {
    "eslint": "^6.2.2",
    "jsdoc": "^3.6.3",
    "lerna": "^3.16.4",
    "npm-run-all": "^4.1.5",
    "web-ext": "^3.1.1",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.3.7"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --force-local",
    "lint": "lerna exec --parallel -- yarn lint",
    "pretest": "yarn lint",
    "test": "lerna exec --parallel -- CI=true yarn test",
    "prebuild": "yarn test && yarn clean",
    "chrome:source": "mkdir -p ./build/chrome-src && cp -Lr ./src/* ./build/chrome-src && mv ./build/chrome-src/manifest-chrome.json ./build/chrome-src/manifest.json",
    "chrome:build": "yarn chrome:source && web-ext build -s ./build/chrome-src -a ./build/web-ext/chrome",
    "mozilla:build": "web-ext build -s ./src -a ./build/web-ext/mozilla",
    "doc": "jsdoc ./src ./README.md -r -d ./build/docs",
    "build": "lerna exec --parallel -- yarn build && web-ext lint -s ./src && npm-run-all mozilla:build chrome:build doc",
    "clean": "rm -rf ./build"
  }
}
