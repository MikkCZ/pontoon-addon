    "stylelint-processor-styled-components": "^1.10.0",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.8.1",
    "ts-prune": "^0.10.3",
    "typescript": "^4.7.4",
    "web-ext-plugin": "^2.1.0",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "engines": {
    "node": "^16.11.0",
    "npm": "^8.0.0",
    "yarn": "NO LONGER USED - Please use npm"
  },
  "engineStrict": true,
  "browserslist": [
    "Firefox >= 91.0",
    "Chrome >= 88"
  ]
}
