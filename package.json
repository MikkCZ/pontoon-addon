    "stylelint-config-recommended": "^11.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-no-unsupported-browser-features": "^6.1.0",
    "stylelint-processor-styled-components": "^1.10.0",
    "ts-jest": "^28.0.8",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "ts-prune": "^0.10.3",
    "typescript": "^5.0.3",
    "web-ext-plugin": "^2.7.0",
    "webpack": "^5.77.0",
    "webpack-cli": "^5.0.1"
  },
  "overrides": {
    "enzyme": {
      "cheerio": "^1.0.0-rc.12"
    },
    "web-ext-plugin": {
      "web-ext": {
        "addons-linter": {
          "cheerio": "^1.0.0-rc.12"
        }
      }
    }
  },
  "engines": {
    "node": "^18",
    "npm": "^8 || ^9",
    "yarn": "NO LONGER USED - Please use npm"
  },
  "engineStrict": true,
  "browserslist": [
    "Firefox >= 91.0",
    "Chrome >= 88"
  ]
}
