{
  "name": "pontoon-tools",
  "version": "0.0.0",
  "private": true,
  "description": "Tools for Pontoon and its integration into the browser.",
  "author": "Michal Stanke <mstanke@mozilla.cz>",
  "license": "MPL-2.0",
  "homepage": "https://github.com/MikkCZ/pontoon-tools#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MikkCZ/pontoon-tools.git"
  },
  "bugs": {
    "url": "https://github.com/MikkCZ/pontoon-tools/issues"
  },
  "workspaces": [
    "src/packages/*"
  ],
  "devDependencies": {
    "eslint": "^6.2.2",
    "jsdoc": "^3.6.3",
    "lerna": "^3.16.4",
    "npm-run-all": "^4.1.5",
    "web-ext": "^3.1.1",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.3.7"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --force-local",

    "packages:lint": "lerna exec --parallel -- yarn lint",
    "packages:test": "lerna exec --parallel -- CI=true yarn test",
    "packages:build": "lerna exec --parallel -- yarn build",

    "pretest": "yarn packages:lint",
    "test": "yarn packages:test",

    "prebuild": "npm-run-all test clean",
    "build:lint": "web-ext lint -s ./src",
    "mozilla:build": "web-ext build -s ./src -a ./build/web-ext/mozilla",
    "chrome:build": "bash ./scripts/build-chrome.sh",
    "doc": "jsdoc ./src ./README.md -r -d ./build/docs",

    "build": "npm-run-all packages:build build:lint mozilla:build chrome:build doc",
    "clean": "rm -rf ./build"
  }
}
