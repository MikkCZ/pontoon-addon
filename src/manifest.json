{
  "applications": {
    "gecko": {
      "id": "pontoon-tools@mikk.cz",
      "strict_min_version": "58.0"
    }
  },
  "manifest_version": 2,
  "name": "Pontoon Tools",
  "description": "Tools for Pontoon and its integration into the browser.",
  "version": "3.4.0",
  "author": "Michal Stanke",
  "icons": {
    "16": "commons/img/pontoon-logo.svg",
    "48": "commons/img/pontoon-logo.svg",
    "96": "commons/img/pontoon-logo.svg",
    "128": "commons/img/pontoon-logo.svg"
  },
  "permissions": [
    "https://pontoon.mozilla.org/*",
    "storage",
    "contextMenus",
    "tabs",
    "notifications",
    "alarms",
    "contextualIdentities",
    "cookies",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "optional_permissions": [
    "<all_urls>"
  ],
  "options_ui": {
    "page": "options/index.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_title": "Pontoon notifications",
    "default_icon": "commons/img/pontoon-logo.svg"
  },
  "page_action": {
    "browser_style": true,
    "default_icon": {
      "19": "commons/img/pontoon-logo-gray-alpha.svg",
      "38": "commons/img/pontoon-logo-gray-alpha.svg"
    },
    "default_popup": "address-bar/index.html"
  },
  "background": {
    "scripts": [
      "commons/js/Options.js",
      "commons/js/BackgroundPontoonMessageType.js",
      "background/RemotePontoon.js",
      "commons/js/RemoteLinks.js",
      "background/PageContextMenu.js",
      "background/ContextButtons.js",
      "background/DataRefresher.js",
      "background/ToolbarButton.js",
      "background/ToolbarButtonContextMenu.js",
      "background/PageAction.js",
      "background/SystemNotifications.js",
      "background/DataFetcher.js",
      "background/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["https://pontoon.mozilla.org/*"],
      "js": [
        "commons/js/BackgroundPontoonMessageType.js",
        "commons/js/BackgroundPontoonClient.js",
        "content-scripts/notifications-bell-icon.js"
      ],
      "run_at": "document_end"
    }
  ]
}

