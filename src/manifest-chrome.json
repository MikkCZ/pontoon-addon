{
  "manifest_version": 2,
  "name": "Pontoon Tools",
  "description": "Tools for Pontoon and its integration into the browser.",
  "version": "3.2.3",
  "author": "Michal Stanke",
  "icons": {
    "32": "commons/img/pontoon-logo-32.png",
    "128": "commons/img/pontoon-logo-128.png"
  },
  "permissions": [
    "https://pontoon.mozilla.org/*",
    "storage",
    "contextMenus",
    "tabs",
    "notifications",
    "alarms"
  ],
  "optional_permissions": [
    "<all_urls>"
  ],
  "options_ui": {
    "page": "options/index.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_title": "Pontoon notifications",
    "default_icon": "commons/img/pontoon-logo-32.png"
  },
  "background": {
    "scripts": [
      "vendor/mozilla/browser-polyfill.min.js",
      "commons/js/Options.js",
      "commons/js/BackgroundPontoonMessageType.js",
      "background/RemotePontoon.js",
      "commons/js/RemoteLinks.js",
      "background/PageContextMenu.js",
      "background/DataRefresher.js",
      "background/ToolbarButton.js",
      "background/ToolbarButtonContextMenu.js",
      "background/SystemNotifications.js",
      "background/DataFetcher.js",
      "background/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["https://pontoon.mozilla.org/*"],
      "js": [
        "vendor/mozilla/browser-polyfill.min.js",
        "commons/js/BackgroundPontoonMessageType.js",
        "commons/js/BackgroundPontoonClient.js",
        "content-scripts/notifications-bell-icon.js"
      ],
      "run_at": "document_idle"
    }
  ]
}

