{
  "manifest_version": 2,
  "name": "Pontoon Tools",
  "description": "Tools for Pontoon and its integration into the browser.",
  "version": "3.4.7",
  "author": "Michal Stanke",
  "icons": {
    "32": "packages/commons/img/pontoon-logo-32.png",
    "128": "packages/commons/img/pontoon-logo-128.png"
  },
  "permissions": [
    "https://pontoon.mozilla.org/*",
    "storage",
    "contextMenus",
    "tabs",
    "notifications",
    "alarms",
    "<all_urls>"
  ],
  "optional_permissions": [
    "<all_urls>"
  ],
  "options_ui": {
    "page": "packages/options/index.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_title": "Pontoon notifications",
    "default_icon": "packages/commons/img/pontoon-logo-32.png"
  },
  "background": {
    "scripts": [
      "packages/background/dist/main.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["https://pontoon.mozilla.org/*"],
      "js": [
        "packages/content-scripts/dist/notifications-bell-icon.js"
      ],
      "run_at": "document_end"
    }
  ]
}
