{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2019",
    "lib": [
      "DOM",
      "ES2019"
    ],
    "sourceMap": true,
    "paths": {
      "@pontoon-addon/commons/src/*": ["../commons/src/*"]
    }
  },
  "include": [
    "src/**/*",
    "../commons/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
