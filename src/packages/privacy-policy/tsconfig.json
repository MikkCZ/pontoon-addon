{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "dist",
    "sourceMap": true,
    "paths": {
      "@pontoon-addon/commons/src/*": ["../commons/src/*"]
    }
  },
  "include": [
    "src/**/*",
    "../commons/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.tsx?"
  ]
}
