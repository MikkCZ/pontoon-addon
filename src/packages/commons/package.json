{
  "name": "@pontoon-addon/commons",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "yarn clean && mkdir -p ./dist && cp -r ./src/* ./dist/ && yarn eslint:run",
    "watch": "yarn clean && mkdir -p ./dist && cp -r ./src/* ./dist/",
    "test": "jest --ci --coverage --passWithNoTests # TODO: remove when tests are in place",
    "clean": "rimraf dist",
    "eslint:run": "eslint --config ./.eslintrc.yml ./src/",
    "eslint:fix": "eslint --config ./.eslintrc.yml --fix ./src/"
  },
  "dependencies": {
    "webextension-polyfill": "^0.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@testing-library/jest-dom": "^5.11.9",
    "babel-jest": "^27.2.5",
    "eslint": "^7.32.0",
    "jest": "^27.2.5",
    "rimraf": "^3.0.2"
  },
  "engines": {
    "node": "^16.0.0",
    "yarn": "^1.22.0"
  },
  "browserslist": [
    "defaults",
    "Firefox >= 91"
  ]
}
