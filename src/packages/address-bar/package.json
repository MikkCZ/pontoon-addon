{
  "name": "@pontoon-addon/address-bar",
  "version": "0.0.0",
  "private": true,
  "homepage": ".",
  "dependencies": {
    "@pontoon-addon/commons": "*",
    "webextension-polyfill": "0.6.0",
    "react": "16.13.0",
    "react-dom": "16.13.0",
    "react-scripts": "3.4.0"
  },
  "devDependencies": {
    "@rescripts/cli": "^0.0.13",
    "@rescripts/rescript-env": "^0.0.11",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "sinon-chrome": "^3.0.1"
  },
  "eslintConfig": {
    "extends": "react-app",
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "Commons/src/(.*)": "<rootDir>/../commons/src/$1.js"
    }
  },
  "scripts": {
    "lint": "eslint ./src/",
    "start": "rescripts start",
    "build": "rescripts build",
    "test": "rescripts test --coverage",
    "eject": "rescripts eject"
  },
  "rescripts": [
    "../../../.rescriptsrc.js"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
