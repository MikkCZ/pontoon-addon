{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2019",
    "lib": [
      "DOM",
      "ES2019"
    ],
    "strict": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@background/*": ["src/background/*"],
      "@commons/*": ["src/commons/*"],
      "@frontend/*": ["src/frontend/*"]
    },
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules"
  ]
}
